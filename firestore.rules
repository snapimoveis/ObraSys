rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isCompanyMember(companyId) {
      return isSignedIn() && (
        request.auth.token.companyId == companyId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.companyId == companyId
      );
    }

    function hasRole(roles) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in roles;
    }

    // --- COLLECTION RULES ---

    // 1. Companies
    match /companies/{companyId} {
      // Allow creation by any authenticated user during signup
      allow create: if isSignedIn();
      // Allow reading if owner or member
      allow read: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid || 
        isCompanyMember(companyId)
      );
      allow update: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // 2. Users (Profiles)
    match /users/{userId} {
      // Users can read their own profile or profiles in the same company
      allow read: if isSignedIn();
      // Allow a user to create and update their own profile document
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && request.auth.uid == userId;
    }

    // 3. Application Data (Budgets, Works, etc.)
    // Standard multi-tenant rule for all other collections
    match /{collectionName}/{docId} {
      allow read: if isSignedIn() && isCompanyMember(resource.data.companyId);
      allow create: if isSignedIn() && isCompanyMember(request.resource.data.companyId);
      allow update: if isSignedIn() && isCompanyMember(resource.data.companyId);
      allow delete: if isSignedIn() && isCompanyMember(resource.data.companyId) && hasRole(['admin']);
    }

    // Special cases for subcollections like messages or schedule tasks
    match /tickets/{ticketId}/messages/{msgId} {
       allow read, write: if isSignedIn(); // Basic access, further filtered by query
    }
  }
}